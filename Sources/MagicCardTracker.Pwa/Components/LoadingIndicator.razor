@if (IsBusy) 
{
    <div class="loader @(FadeOutBackground ? "bg-black80" : null)">
        @if (!string.IsNullOrWhiteSpace(Text))
        {
            <label>@Text ...</label>
        }
    </div>
}

@code {
    
    [Parameter]
    public bool IsBusy { get; set; }

    [Parameter]
    public bool FadeOutBackground { get; set; }

    [Parameter]
    public string? Text { get; set; }
}
